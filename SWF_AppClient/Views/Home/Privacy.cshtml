@model JugadorViewModel

@if (!string.IsNullOrEmpty(ViewBag.ResponseContent))
{
    <div class="text-center">
        <p>@ViewBag.ResponseContent</p>
    </div>
}

<form asp-action="Put_EditJugador" asp-controller="Home" class="text-center">
    <div class="form-group">
        <div class="d-inline-block">
            <input asp-for="Id" type="text" class="form-control" placeholder="Id" />
        </div>
        <div class="d-inline-block">
            <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre" />
        </div>
        <div class="d-inline-block">
            <input asp-for="Camiseta" type="number" class="form-control" placeholder="Camiseta" />
        </div>
        <div class="d-inline-block">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </div>
</form>